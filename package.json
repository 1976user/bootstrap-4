{
  "name": "bootstrap-4",
  "version": "1.0.0",
  "description": "Bootstrap-4 learning project",
  "main": "index.html",
  "scripts": {
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lite": "lite-server",
    "less": "lessc ./css/styles.less ./css/styles.css",
    "sass": "node-sass -o css css",
    "watch:scss": "onchange \"css/*.scss\" -- npm run sass",
    "watch:all": "parallelshell \"npm run watch:scss\" \"npm run lite\""
  },
  "author": "1976user",
  "license": "ISC",
  "devDependencies": {
    "less": "^2.7.2",
    "lite-server": "^2.5.4",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2",
    "parallelshell": "^3.0.2"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "bootstrap-social": "^5.1.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.12.9"
  }
}
